<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <ImageView android:id="@+id/login_asterisk_image"
       	android:layout_gravity="center_horizontal"
       	android:layout_width="80dip"
       	android:layout_height="80dip"
       	android:layout_marginTop="14dip"
       	android:layout_marginBottom="14dip"
       	android:src="@drawable/asterisk" />
       	
    <EditText android:id="@+id/diaspora_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_asterisk_image"
        android:lines="1"
        android:hint="@string/login_diaspora_id_hint" />
        
    <Button android:id="@+id/LoginButton"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/diaspora_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:text="@string/login_button_label" />
</LinearLayout>